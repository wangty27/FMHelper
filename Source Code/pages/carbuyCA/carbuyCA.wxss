/* pages/carbuyCA/carbuyCA.wxss */
page{
  background: #73689B;
  background-attachment: fixed;
  display: flex;
  flex-direction: column;
}

.displaypart{
  height: 100%;
  width: 99%;
  display: flex;
  flex-direction: column;
  color: white;
  font-weight: bold;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.output-top-box{
  height: 200rpx;
  margin: 10rpx auto;
  width: 95%;
  display: flex;
  justify-content: space-around;
}

.output-top-box-content{
  height: 95%;
  width: 25%;
  margin: 0 auto;
  text-align: center;
  color: white;
  display: flex;
  flex-direction: column;
}

.resetBtn{
  height: 70rpx;
  width: 70rpx;
  margin-left: auto;
  margin-top: auto;
  display: flex;
}

.resetBtn-img{
  height: 45rpx;
  width: 45rpx;
  margin: auto;
}

.MP-box{
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.MP-text{
  font-size: 25rpx;
}

.MP-data-tail{
  margin-top: 15rpx;
  font-size: 35rpx;
}

.MP-data{
  font-size: 60rpx;
}

.output-bot-box{
  height: 130rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background: rgb(129, 116, 177);
}

.output-bot-box-content{
  height: 95%; 
  width: 45%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.output-bot-text{
  width: 95%;
  display: flex;
  font-size: 25rpx;
  justify-content: center;
}

.output-bot-data{
  width: 95%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  padding-top: 20rpx;
}

.warning{
  font-size: 18rpx;
  color: white;
  margin-left: 25rpx;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
}

.inputpart{
  background: rgb(243, 244, 246);
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 825rpx;
}

.input-part-items{
  background: white;
}

.input-item{
  height: 75rpx;
  margin-left: 25rpx;
  font-size:  30rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  background: white;
  display: flex;
  border-bottom: 2rpx solid #ECECEC;
  align-items: center;
  font-weight: 300;
}

.input-last-item{
  border-bottom: 2rpx solid white;
}

.input-content{
  width: 385rpx;
  height: 100%;
  font-size: 30rpx;
  text-align: right;
}

.input-title{
  width: 40%;
  margin-right: 40rpx;
}